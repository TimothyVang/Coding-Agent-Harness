# Claude Code Agent - Environment Configuration
# Copy this file to .env and fill in your actual values

# Claude Code OAuth Token (Required)
# Get this by running: claude setup-token
CLAUDE_CODE_OAUTH_TOKEN=your-claude-oauth-token-here

# Anthropic API Key (if using direct API access)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Context7 API Key (for documentation lookup)
# Get this from: https://context7.com
CONTEXT7_API_KEY=your-context7-api-key-here

# Agent Army Configuration
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT=3600
HEALTH_CHECK_INTERVAL=60

# Project Configuration
PROJECTS_BASE_PATH=./projects
MAX_CONCURRENT_PROJECTS=5

# Model Configuration
DEFAULT_MODEL=claude-opus-4-5-20251101
# Alternative models: claude-sonnet-4-5, claude-opus-4-5

# MCP Server Configuration
PLAYWRIGHT_ENABLED=true
CONTEXT7_ENABLED=true

# Logging & Monitoring
LOG_LEVEL=INFO
DASHBOARD_PORT=8080
ENABLE_MONITORING=true

# Task Queue Configuration
TASK_QUEUE_BATCH_SIZE=10
TASK_RETRY_LIMIT=3

# Verification Settings
BLOCKING_ON_INCOMPLETE=true
MIN_COMPLETION_THRESHOLD=95.0

# Test Generation
TEST_GENERATION_TRIGGER=after_each_task
GENERATE_UNIT_TESTS=true
GENERATE_INTEGRATION_TESTS=true
GENERATE_E2E_TESTS=true
GENERATE_API_TESTS=true

# Agent Memory
ENABLE_AGENT_MEMORY=true
MEMORY_RETENTION_DAYS=90

# Performance
AUTO_CONTINUE_DELAY_SECONDS=3
AGENT_POOL_SIZE=10
